---
import type { Profile } from '../types';
type Props = Profile;
const { name, username, image } = Astro.props;
---

<div class='text-center mb-6'>
    <img src={image} alt={name} class='rounded-full mx-auto mb-3 w-24 h-24' />
    <h1 class='text-xl text-gray-200'>{name}</h1>
    <p class='text-gray-400'>@{username}</p>
</div>
