---
import type { SocialLink } from '../types';
type Props = SocialLink;
const { name, url, color } = Astro.props;
---

<a
    href={url}
    target='_blank'
    rel='noopener noreferrer'
    class={`${color} text-white p-4 rounded-lg flex items-center justify-center text-lg font-semibold hover:opacity-90 transition-opacity`}
>
    {name}
</a>
